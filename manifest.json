{
  "manifest_version": 3,
  "name": "Bib Kit",
  "version": "0.1.1",
  "description": "Instantly create hayagriva bibliography items from websites.",
  "icons": {
    "48": "icons/book.svg",
    "96": "icons/book.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{a85febca-472c-4ccf-aea0-204fd08feaf9}"
    }
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; default-src 'self';"
  },
  "action": {
    "default_icon": "icons/book.svg",
    "default_title": "Bib Kit",
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  }
}